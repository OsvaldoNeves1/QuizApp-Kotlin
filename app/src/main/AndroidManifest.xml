<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.osvaldoneves.quizapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-ca-app-pub-6576267424125877~3165846517" />
        <activity android:name="br.osvaldoneves.quizapp.ResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme">

        </activity>
        <activity
            android:name="br.osvaldoneves.quizapp.QuizQuestionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.osvaldoneves.quizapp.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>